{{> menu }}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui four wide column">
      <img src="images/nf1.jpg" class="ui centered medium image">
    </div>
    <div class="ui twelve wide column">
      <div class="ui basic padded segment">
        <h1 class="ui blue header">Devices Details</h1>
      </div>
    </div>
  </div>

  <div class="ui grid">
    <div class="ui two wide column">
    </div>
    <div class="ui twelve wide column">
      <table class="ui celled blue table segment">
        <thead>
        <tr>
          <th> Serial No.</th>
          <th> Type</th>
          <th> Make</th>
          <th> Model</th>
          <th> Description</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each devices}}
          <tr>
            <td> {{ serial_num }} </td>
            <td> {{ type }} </td>
            <td> {{ make }} </td>
            <td> {{ model }} </td>
            <td> {{ description }} </td>
            <td class="selectable">
              <a href="#">Assign</a>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</section>